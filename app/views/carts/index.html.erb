<p id="notice"><%= notice %></p>

<h1>Scan Barcodes</h1>
<%= render 'form' %>
<h2>Current Cart</h2>
<table>
  <thead>
    <tr>
      <th>Assets</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= Asset.find(cart.asset_id_id).name %></td>
        <td><%= link_to 'Show', cart %></td>
        <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Checkout Cart', {controller: "rentals", action: "checkout"} %>